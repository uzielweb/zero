<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="template" method="upgrade">
	<name>Zero</name>
	<creationDate>2018-03-01</creationDate>
	<author>Uziel Almeida Oliveira by Ponto Mega</author>
	<authorEmail>contato@pontomega.com.br</authorEmail>
	<authorUrl>https://www.pontomega.com.br</authorUrl>
	<copyright>Ponto Mega - 2018</copyright>
	<license>GNU/GPL</license>
	<version>3.4</version>
	<description>
		<![CDATA[ <h1>ZERO Joomla Template - version 3.4</h1><p>Criado por <a href="http://www.pontomega.com.br" target="_blank">Ponto Mega | pontomega.com.br</a>.</p> ]]>
	</description>
	<updateservers>
        <server type="extension" priority="1" name="zero">https://raw.githubusercontent.com/uzielweb/zero/master/zero_updates.xml</server>
    </updateservers>
	<files>
		<!-- no need to change -->
		<folder>css</folder>
		<folder>images</folder>
		<folder>fonts</folder>
		<folder>js</folder>
		<folder>html</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<filename>zero_updates.xml</filename>
		<filename>sections.xml</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.tpl_zero.ini</language>
		<language tag="en-GB">en-GB.tpl_zero.sys.ini</language>
		<language tag="pt-BR">pt-BR.tpl_zero.ini</language>
		<language tag="pt-BR">pt-BR.tpl_zero.sys.ini</language>
	</languages>
	<positions>
		<position>breadcrumb</position>
		<position>left</position>
		<position>right</position>
		<position>top</position>
		<position>menu</position>
		<position>login</position>
		<position>slideshow</position>
		<position>above1</position>
		<position>above2</position>
		<position>above3</position>
		<position>above4</position>
		<position>above5</position>
		<position>inner-top1</position>
		<position>inner-top2</position>
		<position>inner-top3</position>
		<position>inner-top4</position>
		<position>inner-top5</position>
		<position>inner-bottom1</position>
		<position>inner-bottom2</position>
		<position>inner-bottom3</position>
		<position>inner-bottom4</position>
		<position>inner-bottom5</position>
		<position>bellow1</position>
		<position>bellow2</position>
		<position>bellow3</position>
		<position>bellow4</position>
		<position>bellow5</position>
		<position>inner-footer1</position>
		<position>inner-footer2</position>
		<position>inner-footer3</position>
		<position>inner-footer4</position>
		<position>inner-footer5</position>
		<position>footer</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logo" type="media" label="TPL_LOGO_LABEL" default="images/logo.png" description="TPL_LOGO_DESC" />
				<field name="favicon" type="media" label="TPL_FAVICON_LABEL" default="images/favicon.png" description="TPL_FAVICON_DESC" />
				<field name="type_of_layout" type="list" label="TPL_TYPE_OF_LAYOUT_LABEL" default="bootstrap" description="TPL_TYPE_OF_LAYOUT_DESC">
					<option value="bootstrap">TPL_BOOTSTRAP</option>
					<option value="custom">TPL_CUSTOM</option>
				</field>
				<field name="default_column" type="list" label="TPL_BOOSTRAP_LIMIT_LABEL" default="col-md-" showon="type_of_layout:bootstrap" description="TPL_BOOSTRAP_LIMIT_DESC">
					<option value="col-xl-">XL</option>
					<option value="col-lg-">LG</option>
					<option value="col-md-">MD</option>
					<option value="col-sm-">SM</option>
				</field>
				<field name="proportional_equal" type="list" label="TPL_PROPORTIONAL_LABEL" default="proportional" description="TPL_PROPORTIONAL_DESC">
					<option value="proportional">TPL_PROPORTIONAL</option>
					<option value="equal">TPL_EQUAL</option>
				</field>
				<field name="col_side" type="list" label="TPL_SIDEBARS_LABEL" default="3" description="TPL_SIDEBARS_DESC">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
				</field>
				
				<field name="sections" type="subform" multiple="true" formsource="templates/zero/sections.xml" label="SECTIONS" description="RENDER_SECTIONS_PARAMS" />

			</fieldset>
		</fields>
	</config>


</extension>
